@model BL.MessageViewModel


<h1>Edit</h1>

<h4>ProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditMessageSubmit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="Id" hidden readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
              
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateCreated" hidden class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <input asp-for="UserId" hidden class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="ChatId" hidden class="form-control" />
                <span asp-validation-for="ChatId" class="text-danger"></span>
            </div>
            
            

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Save">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ChatView" asp-route-chatId="@Model.ChatId">Back to List</a>
</div>