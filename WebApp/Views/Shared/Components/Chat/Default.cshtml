@model IEnumerable<BL.ChatViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@foreach (var item in Model)
{
    <a asp-action="ChatView" asp-controller="Chat" asp-route-chatId="@item.Id" class="list-group-item list-group-item-action border-0">
        <div class="badge bg-success float-right">@*Unread*@5</div>
        <div class="d-flex align-items-start">
            <div class="flex-grow-1 ml-3">
                @item.ChatName
                <div class="small"><span class="fas fa-circle chat-online"></span>@*Unread*@ Online</div>
            </div>
        </div>
    </a>
}